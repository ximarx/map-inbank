<shortcuts>
	<programGroup defaultName="InBank\InBank Client Impiegato"
		location="applications" />
	<shortcut name="InBank Impiegato" 
		target="$INSTALL_PATH\InBankImpiegato.bat" 
		workingDirectory="$INSTALL_PATH" 
		description="Avvia il client per Impiegato"
		iconFile="$INSTALL_PATH\images\icon.ico" 
		initialState="noShow" desktop="yes"
		programGroup="yes"
		applications="no">
		<createForPack name="InBank Client Impiegato" />
	</shortcut>
	<shortcut name="Uninstall"
		target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
		workingDirectory="$INSTALL_PATH\Uninstaller" 
		description="Disinstalla InBank Client Impiegato"
		initialState="normal" 
		programGroup="yes" 
		desktop="no"
		applications="no">
		<createForPack name="InBank Client Impiegato" />
	</shortcut>
</shortcuts>