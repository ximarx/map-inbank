<shortcuts>
	<programGroup defaultName="InBank/InBankClientBancomat"
		location="applications" />
	<shortcut name="InBank Client Bancomat" 
		target="$INSTALL_PATH/InBankBancomat.sh"
		workingDirectory="$INSTALL_PATH" 
		description="Avvia il terminale Bancomat"
		iconFile="$INSTALL_PATH/images/icon.png"
		type="Application" 
		encoding="UTF-8" 
		initialState="normal" 
		desktop="yes">
		<createForPack name="InBank Client Bancomat" />
	</shortcut>
	<shortcut name="Uninstall"
		target="$INSTALL_PATH/Uninstaller/uninstaller.jar" 
		workingDirectory="$INSTALL_PATH/Uninstaller" 
		description="Disinstalla InBank Client Bancomat"
		type="Application"
		encoding="UTF-8" 
		initialState="normal" 
		desktop="no">
		<createForPack name="InBank Client Bancomat" />
	</shortcut>
</shortcuts>